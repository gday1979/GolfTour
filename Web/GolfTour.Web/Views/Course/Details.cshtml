@model GolfTour.Web.ViewModels.Course.DetailsViewModel
@{
    ViewBag.Title = "Course Details";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.Name</h3>
            <p class="mb-0"><span class="fw-bold">Country: </span>@Model.Country</p>
            <p class="mb-0"><span class="fw-bold">City: </span>@Model.City</p>
            <p class="mb-0"><span class="fw-bold">Designer: </span>@Model.Designer</p>
            <p class="mb-0"><span class="fw-bold">ImageCourse: </span>@Model.ImageCourse</p>
           
        </div>

        <a asp-controller="Course" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to All Courses</a>
        @if (User?.Identity?.Name == Model.)
        {
            <a asp-controller="Course" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
            <a asp-controller="Course" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mb-2 w-100 p-3 fw-bold">Delete</a>
        }

    </div>
</div>
