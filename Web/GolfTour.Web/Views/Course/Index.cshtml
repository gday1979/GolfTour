@using GolfTour.Models
@model CourseViewModel
@{
   this.ViewData["Title"] = "Course";
}
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="https://www.caddybytes.com/virtualtours/PGA%20West%20Palmer/slides/Par5_14th.jpg">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Country</p>
                            <p class="card-text">@item.City</p>
                            <p class="card-text">@item.Designer</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
         </div>
    </div>
</div>
